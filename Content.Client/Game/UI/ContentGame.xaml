<ui1:ContentGame
     xmlns="https://spacestation14.io"
     xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
     xmlns:viewport="clr-namespace:Content.Client.Viewport"
     xmlns:ui1="clr-namespace:Content.Client.Game.UI">
    <controls:AnchorControl LayoutPreset="Wide">
        <viewport:GameViewport/>
    </controls:AnchorControl>
    
   <controls:AnchorControl LayoutPreset="Wide">
       <BoxContainer Name="MainContainer" Visible="False">
           <BoxContainer Orientation="Horizontal" Margin="15 200 15 15">
               <BoxContainer Orientation="Vertical">
                   <PanelContainer StyleClasses="dreamPanel">
                       <BoxContainer Orientation="Vertical">
                           <controls:ExposedRichTextLabel Name="MenuLabel" Margin="0 15 0 30" Text="{Loc 'menu-label'}"/>
                           <Label Text="не спрашивайте зачем... я сам в душе не чаю"/>
                           <Label Text="Артефакты? Ну ясен хуй! сендбокс передает привет!"/>
                           <Label Text="И сендбокс виолейшн тоже!"/>
                       </BoxContainer>
                   </PanelContainer>
               </BoxContainer>
           </BoxContainer>
       </BoxContainer>
   </controls:AnchorControl>
</ui1:ContentGame>