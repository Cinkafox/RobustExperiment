     xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
     xmlns:viewport="clr-namespace:Content.Client.Viewport"
     xmlns:ui1="clr-namespace:Content.Client.Game.UI">
    <controls:AnchorControl LayoutPreset="Wide">
        <viewport:GameViewport/>
    </controls:AnchorControl>
    
   <controls:AnchorControl LayoutPreset="Wide">
       <BoxContainer Name="MainContainer" >
           <BoxContainer Orientation="Horizontal" Margin="15 200 15 15">
               <BoxContainer Orientation="Vertical">
                   <PanelContainer StyleClasses="dreamPanel">
                       <BoxContainer Orientation="Vertical">
                           <Label Text="W - вперед"/>
                           <Label Text="S - назад"/> 
                           <Label Text="A - поворот туды"/>
                           <Label Text="D - поворот сюды"/>
                           <Label Text="Лагает? Похуй!"/>
                           <Label Text="Артефакты? Поебать!"/>
                       </BoxContainer>
                   </PanelContainer>
               </BoxContainer>
           </BoxContainer>
       </BoxContainer>
   </controls:AnchorControl>
</ui1:ContentGame>